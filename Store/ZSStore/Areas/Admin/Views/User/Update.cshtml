@model UserDtoForUpdate
Update



<div class="text-center">
    <div class="display-6">Kullanıcı Güncelle @Model.Email</div>
</div>

<form method="post" asp-action="Update">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group my-3">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control bg-light" readonly />
    <small class="form-text text-muted">E-posta adresi değiştirilemez.</small>
</div>


            <div class="form-group my-3">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
            </div>

           
        </div>

        <div class="col-md-6">
            <div class="lead p-2 mt-2">Roller</div>
            @foreach (var item in Model.Roles)
            {
                <div class="form-check my-2">
                    <input type="checkbox" checked="@(Model.UserRoles.Contains(@item))"name="Roles" value="@item" class="form-check-input" />
                    <label class="form-check-label">@item</label>
                </div>
            }
            <small class="form-text text-muted">Lütfen Kullanıcı için rol seçin.</small>
        </div>
        
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary">Oluştur</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Geri</a>
    </div>
</form>
