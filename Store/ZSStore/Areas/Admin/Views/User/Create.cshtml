@model UserDtoForCreation

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow p-4">
                <div class="card-body">
                    <h3 class="text-center mb-4">Yeni Kullanıcı Oluştur</h3>

                    <form method="post" asp-action="Create">
                        <div class="text-danger mb-3" asp-validation-summary="All"></div>

                        <div class="row">
                            <!-- Sol Alan: Email, Telefon, Şifre -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="PhoneNumber"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control" type="password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                            </div>

                            
                            <div class="col-md-6">
                                <div class="lead p-2 mt-2">Roller</div>
                                @foreach (var item in Model.Roles)
                                {
                                    <div class="form-check my-2">
                                        <input type="checkbox" name="Roles" value="@item" class="form-check-input" />
                                        <label class="form-check-label">@item</label>
                                    </div>
                                }
                                <small class="text-muted d-block mt-2">Kullanıcıya atanacak rolleri seçiniz.</small>
                            </div>
                        </div>

                        <div class="form-group text-center mt-4">
                            <div class="btn-group">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-user-plus"></i> Oluştur
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fa fa-list"></i> Geri
                                </a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
