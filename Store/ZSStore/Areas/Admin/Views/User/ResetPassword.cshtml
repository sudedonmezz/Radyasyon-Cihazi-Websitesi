@model ResetPasswordDto

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow p-4">
                <div class="card-body">
                    <h3 class="text-center mb-4">Şifreyi Değiştir <span class="text-muted">(@Model.Email)</span></h3>

                    <div class="text-danger mb-3" asp-validation-summary="All"></div>

                    <form method="post" asp-action="ResetPassword">
                        <input type="hidden" asp-for="Email" />

                        <div class="form-group mb-3">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>

                        <div class="form-group text-center mt-4">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-key"></i> Şifreyi Güncelle
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fa fa-arrow-left"></i> Geri Dön
                                </a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
