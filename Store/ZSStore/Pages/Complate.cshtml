@page

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body text-center p-5">
                    <i class="fa fa-check-circle fa-4x text-success mb-4"></i>
                    <h2 class="mb-3">Teşekkürler!</h2>
                    <p class="lead">Siparişiniz başarıyla alınmıştır.</p>

                    @if (!string.IsNullOrEmpty(Model.OrderId))
                    {
                        <p class="fw-semibold text-secondary">Sipariş Numarası: <span class="text-dark">#@Model.OrderId</span></p>
                    }

                    <p class="text-muted">Siparişiniz 3-5 iş günü içerisinde gönderilecektir.</p>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-4 px-4">
                        <i class="fa fa-home me-2"></i> Anasayfaya Dön
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>


@functions
{
    [BindProperty(SupportsGet =true)]
    public String? OrderId{get;set;}
}