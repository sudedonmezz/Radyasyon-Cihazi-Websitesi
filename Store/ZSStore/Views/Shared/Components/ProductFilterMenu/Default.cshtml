<div class="my-4 mx-2">
    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-header bg-light fw-bold text-center">
            <i class="fa fa-filter text-secondary me-2"></i> Filtrele
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])" />

                <div class="form-group mb-3">
                    <label for="SearchTerm">Ürün Adı</label>
                    <input type="text" class="form-control shadow-sm" name="SearchTerm" placeholder="örn. Dozimetre" />
                </div>

                <div class="form-group mb-3">
                    <label for="MinPrice">En Düşük Fiyat</label>
                    <input type="number" class="form-control shadow-sm" name="MinPrice" placeholder="₺0" />
                </div>

                <div class="form-group mb-3">
                    <label for="MaxPrice">En Yüksek Fiyat</label>
                    <input type="number" class="form-control shadow-sm" name="MaxPrice" placeholder="₺10000" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="fa fa-search me-1"></i> Filtrele
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
