@model IEnumerable<Category>

<div class="my-4 mx-2">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-warning text-white fw-bold text-center">
            <i class="fa fa-list me-2"></i> Kategoriler
        </div>
        <div class="list-group list-group-flush">
            @foreach (var item in Model)
            {
                var isActive = Context.Request.Query["categoryId"] == item.CategoryId.ToString();
                <a asp-action="Index" asp-route-categoryId="@item.CategoryId"
                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(isActive ? "active" : "")">
                    <span><i class="fa fa-tag me-2 text-warning"></i>@item.CategoryName</span>
                    <i class="fa fa-chevron-right text-muted"></i>
                </a>
            }
        </div>
    </div>
</div>
