@model SupportMessageForCreationDto
@using Entities.Dtos

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-warning text-white text-center py-3 rounded-top-4">
                    <h4 class="mb-0">
                        <i class="fa-solid fa-headset me-2"></i>Teknik Destek Talebi
                    </h4>
                </div>

                <div class="card-body p-4">
                    @if (ViewBag.Success != null && (bool)ViewBag.Success)
                    {
                        <div class="alert alert-success text-center">
                            <i class="fa fa-check-circle me-2"></i>Talebiniz başarıyla gönderildi.
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">E-posta</label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Message" class="form-label">Mesajınız</label>
                            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Lütfen sorununuzu detaylıca belirtiniz..."></textarea>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-warning px-4 py-2 text-white shadow">
                                <i class="fa fa-paper-plane me-2"></i>Gönder
                            </button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>
