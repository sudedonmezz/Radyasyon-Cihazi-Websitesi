@model Product

<div class="container my-5">
    <div class="row mb-4">
        
        <div class="col-md-6 text-center">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.ProductName" style="max-height: 400px;" />
        </div>

       
        <div class="col-md-6">
            <h2 class="fw-bold">@Model.ProductName</h2>
            <p class="text-muted">@Model.ProductDescription</p>

            <p><strong>Fiyat:</strong> ₺@Model.ProductPrice</p>

            @if (Model.ProductWeight != null)
            {
                <p><strong>Ağırlık:</strong> @Model.ProductWeight kg</p>
            }

            @if (!string.IsNullOrEmpty(Model.ProductUsageAreas))
            {
                <p><strong>Kullanım Alanları:</strong> @Model.ProductUsageAreas</p>
            }

         
            <form asp-page="/cart" id="@Model.ProductId" method="post" class="m-0 p-0">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="btn btn-outline-primary btn-sm">
                    <i class="fa fa-cart-plus"></i> Sepete Ekle
                </button>
            </form>

            <a href="/Product" class="btn btn-outline-secondary mt-3">← Ürünlere Geri Dön</a>
        </div>
    </div>

    
    <div class="row">
        <div class="col-12">
            <h4 class="fw-bold">Teknik Özellikler</h4>
            <p>@Model.ProductTechnicalSpecs</p>

           
        </div>
    </div>
</div>
