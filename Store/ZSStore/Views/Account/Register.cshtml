@using Entities.Dtos
@model RegisterDto

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-warning text-white text-center py-4">
                    <h3 class="mb-0">
                        <i class="fa-solid fa-user-plus me-2"></i> Kayıt Ol
                    </h3>
                </div>

                <div class="card-body px-4 py-5">
                    <form method="post" asp-action="Register">
                        @Html.AntiForgeryToken()

                        <div class="text-danger text-center mb-3" asp-validation-summary="All"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">E-Posta</label>
                            <input asp-for="Email" class="form-control" />
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="fa fa-user-check me-1"></i> Kayıt Ol
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <span>Zaten bir hesabın var mı?</span>
                        <a asp-action="Login" asp-controller="Account" class="text-decoration-none fw-bold">Giriş Yap</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
