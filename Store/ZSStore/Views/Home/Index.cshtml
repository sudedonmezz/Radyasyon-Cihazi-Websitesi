@{
    ViewData["Title"] = "Anasayfa";
    Layout = "_Layout";
}


<section class="hero-box my-5">
    <div class="container">
        <div class="rounded-box p-5">
            <div class="row align-items-center">
                <div class="col-lg-6 text-center text-lg-start mb-4 mb-lg-0">
                    <h1 class="hero-title">
                        Güvenilir ölçüm,<br />
                        modern teknolojiyle buluşuyor.
                    </h1>
                    <p class="lead text-dark">
                        ZS Teknoloji ile radyasyon ölçümünde güveni yaşayın.
                    </p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-warning mt-3">Ürünleri Keşfet</a>
                </div>
                <div class="col-lg-6 text-center">
                    <div class="hero-image-wrapper position-relative d-inline-block">
                        <div class="bg-circle"></div>
                        <img src="/images/man.png" alt="Radyasyon Cihazı" class="img-fluid hero-img position-relative" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features-section py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="feature-box p-4 h-100">
                    <i class="uil uil-truck fs-1 text-warning mb-2"></i>
                    <h5 class="fw-bold">Hızlı Kargo</h5>
                    <p class="text-muted">Siparişiniz aynı gün kargoya verilir.</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-box p-4 h-100">
                    <i class="uil uil-chart fs-1 text-warning mb-2"></i>
                    <h5 class="fw-bold">Veri Grafiği</h5>
                    <p class="text-muted">Cihazlar anlık veri takibi sağlar.</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-box p-4 h-100">
                    <i class="uil uil-check-circle fs-1 text-warning mb-2"></i>
                    <h5 class="fw-bold">Onaylı Satış</h5>
                    <p class="text-muted">Uluslararası kalite belgelerine sahiptir.</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-box p-4 h-100">
                    <i class="uil uil-box fs-1 text-warning mb-2"></i>
                    <h5 class="fw-bold">Kargo Ücretsiz</h5>
                    <p class="text-muted">Tüm Türkiye’ye ücretsiz teslimat.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="details-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mb-4 mb-lg-0">
                <h2 class="fw-bold mb-3">Detaylı Raporlama Teknolojisi</h2>
                <p class="text-muted mb-4">
                    Geliştirdiğimiz sistemler, ölçüm sonuçlarını anlık olarak analiz eder ve kullanıcılara kolayca yorumlayabilecekleri veri grafikleri sunar.
                </p>
                <a asp-controller="ProductAnalysis" asp-action="MyProducts" class="btn btn-outline-warning">Detayları Gör</a>
            </div>
            <div class="col-lg-4 text-center">
                <img src="/images/details.png" alt="Detay Görseli" class="img-fluid rounded shadow" />
            </div>
        </div>
    </div>
</section>

<section class="about-section py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mb-4 mb-lg-0">
                <h2 class="fw-bold mb-3">Biz Kimiz?</h2>
                <p class="text-muted mb-3">
                    2010 yılında kurulan ZS Teknoloji, radyasyon ölçüm ve izleme teknolojilerinde uzmanlaşmış, uluslararası düzeyde faaliyet gösteren yenilikçi bir firmadır.
                </p>
                <a  asp-page="/AboutUs" class="btn btn-outline-warning">Devamını Oku</a>
            </div>
            <div class="col-lg-4 text-center">
                <img src="/images/employees2.png" alt="ZS Hakkında" class="img-fluid rounded shadow-sm" />
            </div>
        </div>
    </div>
</section>
