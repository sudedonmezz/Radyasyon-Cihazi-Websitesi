@model Order

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0"><i class="fa fa-credit-card me-2"></i> Sipariş Bilgileri</h4>
                </div>

                <div class="card-body px-4 py-4">
                    <div class="text-danger mb-3" asp-validation-summary="All"></div>

                    <form method="post" asp-action="Checkout">

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">İsim</label>
                            <input class="form-control" asp-for="Name" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Line1" class="form-label">Adres Satırı 1</label>
                            <input class="form-control" asp-for="Line1" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Line2" class="form-label">Adres Satırı 2</label>
                            <input class="form-control" asp-for="Line2" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Line3" class="form-label">Adres Satırı 3</label>
                            <input class="form-control" asp-for="Line3" />
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="City" class="form-label">Şehir</label>
                            <input class="form-control" asp-for="City" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fa fa-check-circle me-1"></i> Siparişi Tamamla
                            </button>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
